<?xml version="1.0" encoding="UTF-8"?>
<task name="sample_task" typeId="default">

	<!-- Description section -->
	<description>
Task for testing cicheck features. The first task for cicheck.
This task uses default target set: clean, configure, build, buildtests, runtests.
	</description>

	<!-- TargetSet section -->
	<!--
	<targetSet typeId="default" default="help">
		<target name="clean" />
		<target name="configure" />
		<target name="build" />
	</targetSet>
	-->
	<targetSet typeId="default">
		<target name="help">
			<rules>
				<rule name="print_help" typeId="systemCmd" cmd="echo" options="target_help__print_help" />
			</rules>
		</target>
		<target name="clean">
			<rules>
				<rule name="remove_artefacts" typeId="systemCmd" cmd="echo" options="target_clean__remove_artefacts" />
				<rule name="remove_project" typeId="systemCmd" cmd="echo" options="target_clean__remove_project" />
			</rules>
		</target>
		<target name="conf_a">
			<dependencies>
				<value>clean</value>
			</dependencies>
		</target>
		<target name="conf_b">
			<dependency value="clean" />
		</target>
		<target name="conf_c">
			<dependencies>
				<value>clean</value>
			</dependencies>
		</target>
		<target name="configure">
			<dependencies>
				<value>conf_a</value>
				<value>conf_b</value>
				<value>conf_c</value>
			</dependencies>
		</target>
		<target name="build_lib">
			<dependency value="configure" />
		</target>
		<target name="build_app">
			<dependency value="configure" />
			<dependency value="build_lib" />
		</target>
		<target name="build_all">
			<dependency value="build_lib" />
			<dependency value="build_app" />
		</target>
		<target name="build_tests">
			<dependency value="build_lib" />
		</target>
		<target name="run_app">
			<dependency value="build_app" />
		</target>
		<target name="run_tests">
			<dependency value="build_tests" />
		</target>
	</targetSet>

	<!-- imaginary typeId="single" TargetSet (with one "default" target) XML declaration -->
	<!-- <targetSet typeId="single"> -->


	<!--// CheckList section //-->
	<checkMap typeId="default">
		<check target="help">
			<ruleSet>
				<rule name="print_help" typeId="systemCmd" cmd="echo" options="target_help__print_help" />
			</ruleSet>
		</check>
		<check target="clean">
			<ruleSet>
				<rule name="remove_artefacts" typeId="systemCmd" cmd="echo" options="target_clean__remove_artefacts" />
				<rule name="remove_project" typeId="systemCmd" cmd="echo" options="target_clean__remove_project" />
			</ruleSet>
		</check>
	<!--
		<check target="configure" >
			<ruleSet>
				<rule name="update_assets" type="bashScript" file="bashScripts/rule_configure__update_assets.bash" />
				<rule name="generate_project" type="bashScript" file="bashScripts/rule_configure__generate_project.bash" />
			</ruleSet>
		</check>
		<check target="build">
			<ruleSet>
				<rule name="application" type="bashScript" file="bashScripts/rule_build__application.bash" />
			</ruleSet>
		</check>
		<check target="buildtests">
			<ruleSet>
				<rule name="app_tests" type="bashScript" file="bashScripts/rule_buildtests__app_tests.bash" />
			</ruleSet>
		</check>
		<check target="runtests">
			<ruleSet>
				<rule name="app_tests" type="bashScript" file="bashScripts/rule_runtests__app_tests.bash" />
			</ruleSet>
		</check>
	-->
	</checkMap>
</task>
