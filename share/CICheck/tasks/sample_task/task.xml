	<!--// CheckList section //-->
	<checkMap typeId="">
		<check target="clean">
			<ruleset>
				<rule name="remove_artefacts" type="bashScript" file="bashScripts/target_clean__remove_artefacts.bash" />
				<rule name="remove_project" type="bashScript" file="bashScripts/target_clean__remove_project.bash" />
			</ruleset>
		</check>
		<check target="configure" >
			<ruleset>
				<rule name="update_assets" type="bashScript" file="bashScripts/rule_configure__update_assets.bash" />
				<rule name="generate_project" type="bashScript" file="bashScripts/rule_configure__generate_project.bash" />
			</ruleset>
		</check>
		<check target="build">
			<ruleset>
				<rule name="application" type="bashScript" file="bashScripts/rule_build__application.bash" />
			</ruleset>
		</check>
		<check target="buildtests">
			<ruleset>
				<rule name="app_tests" type="bashScript" file="bashScripts/rule_buildtests__app_tests.bash" />
			</ruleset>
		</check>
		<check target="runtests">
			<ruleset>
				<rule name="app_tests" type="bashScript" file="bashScripts/rule_runtests__app_tests.bash" />
			</ruleset>
		</check>
