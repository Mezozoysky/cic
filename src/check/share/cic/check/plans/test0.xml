<?xml version="1.0" encoding="UTF-8"?>

<plan name="Test0" typeId="default">

	<description>
test0, the plan for check testing purpose
	</description>

	<phases>

		<phase name="help">
			<actions>
				<action typeId="systemCmd" cmd="echo">
                  <args>
                    <arg value="phase_help__print_help" />
                  </args>
                </action>
			</actions>
		</phase>

		<phase name="clean">
			<actions>
				<action typeId="systemCmd" cmd="echo">
                  <args>
                    <arg value="phase_clean__remove_artefacts" />
                  </args>
                  <workDir value="build" />
                </action>
				<action typeId="systemCmd" cmd="echo">
                  <args>
                    <arg value="phase_clean__remove_project" />
                  </args>
                  <workDir value="build" />
                </action>
			</actions>
		</phase>

		<phase name="configure">
			<dependencies>
                <dependency value="clean" />
			</dependencies>
            <actions>
                <action typeId="systemCmd" cmd="ls">
                  <args>
                    <arg value="-n1" />
                  </args>
                  <workDir value="build" />
                </action>
            </actions>
		</phase>

		<phase name="build">
            <dependencies>
                <dependency value="configure" />
            </dependencies>
            <actions>
                <action typeId="systemCmd" cmd="echo">
                  <args>
                    <arg value="phase_build__build_project" />
                  </args>
                  <workDir value="build" />
                </action>
            </actions>
		</phase>

	</phases>

	<default-phase value="build" />

</plan>
